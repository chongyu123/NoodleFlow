<%= form_for([@pad, @page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 60 %>
  </div>
  <div class="field">
    Content: 
    <br/>
    Try using <a target="_new" href="http://support.mashery.com/docs/customizing_your_portal/Markdown_Cheat_Sheet">Markdown Cheat Sheet</a> to create a note.
    <br />
    <%= f.text_area :body, :cols => 80%>
  </div>
  <div class="actions">
    <%= f.submit "Create Note" %>
  </div>
<% end %>
